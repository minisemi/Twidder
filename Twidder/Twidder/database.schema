DROP TABLE IF EXISTS Users;

CREATE TABLE Users(
   email varchar(255),
   firstName varchar(255) NOT NULL,
   familyName varchar(255) NOT NULL,
   password varchar(255) NOT NULL,
   gender varchar(255) NOT NULL,
   city varchar(255) NOT NULL,
   country varchar(255) NOT NULL,
   PRIMARY KEY( email )
);

