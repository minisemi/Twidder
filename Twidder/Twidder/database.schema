DROP TABLE IF EXISTS Posts;

CREATE TABLE Posts(
    receiver varchar(255) NOT NULL,
    sender varchar(255),
    message varchar(255),
    time datetime UNIQUE,
    PRIMARY KEY(sender, time),
    FOREIGN KEY (receiver, sender) REFERENCES Users(email, email)
);

