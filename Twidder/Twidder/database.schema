DROP TABLE IF EXISTS ActiveUsers;

CREATE TABLE ActiveUsers(
    user varchar(255),
    token varchar(255) UNIQUE,
    PRIMARY KEY(user),
    FOREIGN KEY(user) REFERENCES Users(email)
);

